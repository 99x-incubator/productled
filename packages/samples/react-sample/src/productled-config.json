{
    "hooks": [
        {
            "plugin": "spotlight",
            "trigger": {
                "url": "/page/subpage*",
                "selector": ".spot-me",
            
                "frequency": "always",
                "schedule": {
                    "start": { "year": "2024","month": "04", "date": "01", "time": "09:00" },
                    "end": { "year": "2024", "month": "12", "date": "01", "time": "09:00" }
                }
            },
            "config": {
                "title": "New Feature Spotlight",
                "description": "You can now do the impossible with this new feature",
                "link": "https://99x-incubator.github.io/productled/plugins/spotlight.html",
                "positioning": {
                    "left": "60",
                    "top": "10"
                }
            }
        },
        {
            "plugin": "tooltip",
            "trigger": {
                "url": "/page/subpage*",
                "selector": ".tooltip-me",
            
                "frequency": "always",
                "schedule": {
                    "start": { "year": "2024","month": "04", "date": "01", "time": "09:00" },
                    "end": { "year": "2024", "month": "12", "date": "01", "time": "09:00" }
                }
            },
            "config": {
                "text": "This is a tooltip text!",
                "position": "right"
            }
        }
    ]
}